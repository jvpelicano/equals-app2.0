<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:background="@color/background"
    tools:context=".EMP.EMP_ViewPotential_All">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="@drawable/cardview_shape"
        android:weightSum="3">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/pwd_user_imageview"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_above="@+id/btnViewCategory"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="-145dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/lblName"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/pwd_user_imageview"
            android:text="Name"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/displayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblName"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/pwd_user_imageview"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/textColor"
            android:fontFamily="@font/proxima_nova_regular"/>


        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_below="@+id/displayName"
            android:layout_toEndOf="@+id/pwd_user_imageview"
            android:fontFamily="@font/open_sans_regular"
            android:text="Email"
            android:textColor="@color/textColor"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/displayEmail"
            android:layout_width="match_parent"
            android:layout_below="@+id/lblEmail"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/pwd_user_imageview"
            android:fontFamily="@font/open_sans_regular"
            android:maxLines="1"
            android:textColor="@color/textColor" />

        <TextView
            android:id="@+id/lblContact"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayEmail"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/pwd_user_imageview"
            android:fontFamily="@font/open_sans_regular"
            android:text="Contact"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/displayContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblContact"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/pwd_user_imageview"
            android:textColor="@color/textColor"
            android:maxLines="1"
            android:fontFamily="@font/proxima_nova_regular" />



        <Button
            android:id="@+id/btnViewCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_effect"
            android:text="View Applicant"
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/displayPostDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background" >
    </View>
</androidx.cardview.widget.CardView>